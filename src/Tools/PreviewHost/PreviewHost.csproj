        <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="11.2.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="S:\github\Consolonia\src\Consolonia.Core\Consolonia.Core.csproj" />

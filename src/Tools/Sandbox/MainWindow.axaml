<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Sandbox.MainWindow"
        Title="Sandbox">
    <Grid RowDefinitions="Auto *">
        <StackPanel Orientation="Horizontal">
            <Label>Font</Label>
            <ComboBox x:Name="Fonts" ItemsSource="{Binding Fonts}" Grid.Row="0" SelectedItem="{Binding SelectedFont}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
          <!--  <Label>FontWeight</Label>
            <ComboBox Grid.Row="0" SelectedItem="{Binding SelectedFontWeight}" ItemsSource="{Binding FontWeights}"/>
            <Label>FontStyle</Label>
            <ComboBox Grid.Row="0" SelectedItem="{Binding SelectedFontStyle}" ItemsSource="{Binding FontStyles}"/>-->
        </StackPanel>

        <Border BorderBrush="Gray" BorderThickness="1" Grid.Row="1">
            <TextBox AcceptsReturn="true"
                     FontFamily="{Binding SelectedFont.FontFamily}"
                     FontSize="{Binding SelectedFont.FontSize}"
                     FontStyle="{Binding SelectedFontStyle}"
                     FontWeight="{Binding SelectedFontWeight}"
                     ></TextBox>
        </Border>
    </Grid>
</Window>
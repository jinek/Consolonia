<windowManager:ManagedWindow xmlns="https://github.com/avaloniaui"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:storage="clr-namespace:Avalonia.Platform.Storage;assembly=Avalonia.Base"
                             xmlns:core-Controls="clr-namespace:Consolonia.Core.Controls"
                             xmlns:windowManager="clr-namespace:Iciclecreek.Avalonia.WindowManager;assembly=Iciclecreek.Avalonia.WindowManager"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             CanResize="True"
                             WindowStartupLocation="Manual"
                             SizeToContent="Manual"
                             x:DataType="core-Controls:FileSavePickerViewModel"
                             x:Class="Consolonia.Core.Controls.FileSavePicker"
                             Icon="ðŸ“°"
                             Title="{Binding Options.Title}">
    <Grid RowDefinitions="Auto * Auto Auto">
        <Grid ColumnDefinitions="Auto *">
            <TextBlock Text="ðŸ“ " />
            <TextBox x:Name="CurrentFolderTextBox"
                     Text="{Binding CurrentFolderPath, Mode=TwoWay}"
                     Grid.Column="1" />
        </Grid>
        <ListBox x:Name="ItemsListBox"
                 Grid.Row="1"
                 ItemsSource="{Binding Items}"
                 SelectedItem="{Binding SelectedItem}"
                 DoubleTapped="OnDoubleTapped">
            <ListBox.DataTemplates>
                <DataTemplate DataType="{x:Type storage:IStorageFolder}">
                    <Grid ColumnDefinitions="Auto * "
                          Background="Transparent">
                        <TextBlock Text="ðŸ“"
                                   Margin="0 0 1 0" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
                <DataTemplate DataType="{x:Type storage:IStorageFile}">
                    <Grid ColumnDefinitions="Auto *"
                          Background="Transparent">
                        <TextBlock Text="ðŸ“°"
                                   Margin="0 0 1 0" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </ListBox.DataTemplates>
        </ListBox>
        <Grid Grid.Row="2"
              ColumnDefinitions="Auto *">
            <TextBlock Text="File:"
                       Margin="0 0 1 0" />
            <TextBox Text="{Binding SavePath, Mode=TwoWay}"
                     Grid.Column="1" />
        </Grid>
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="1,0"
                    Spacing="1">
            <Button x:Name="SaveButton"
                    Content="Save"
                    Click="OnOK"
                    IsDefault="True"
                    IsEnabled="{Binding SavePath, Converter={x:Static ObjectConverters.IsNotNull}}" />
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    IsCancel="True"
                    Click="OnCancel" />
        </StackPanel>
    </Grid>
</windowManager:ManagedWindow>
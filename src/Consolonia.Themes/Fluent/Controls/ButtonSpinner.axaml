<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="https://github.com/jinek/consolonia">
    <!--todo: Instead of creating ControlTheme to set the caret, better introduce Theme resource, like symbols-->
    
    <Styles.Resources>
        <ControlTheme x:Key="{x:Type ButtonSpinner}"
                      TargetType="ButtonSpinner">
            <ControlTheme.BasedOn>
                <StaticResource ResourceKey="{x:Type ButtonSpinner}" />
            </ControlTheme.BasedOn>

            <Style Selector="^ /template/ controls|CaretControl#FocusControl">
                <Setter Property="CaretStyle"
                        Value="BlinkingUnderline" />
            </Style>
        </ControlTheme>
    </Styles.Resources>
</Styles>
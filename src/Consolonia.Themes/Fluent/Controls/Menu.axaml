<!-- FLUENT THEME-->
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="https://github.com/jinek/consolonia">
    <Styles.Resources>

        <ControlTheme x:Key="TopLevelMenuItem"
                      TargetType="MenuItem"
                      BasedOn="{StaticResource TopLevelMenuItem}">
            <Style Selector="^ /template/ controls|CaretControl#CaretControl">
                <Setter Property="CaretStyle"
                        Value="None" />
            </Style>
        </ControlTheme>

        <ControlTheme x:Key="{x:Type Menu}"
                      BasedOn="{StaticResource {x:Type Menu}}"
                      TargetType="Menu">
            <Setter Property="ItemContainerTheme"
                    Value="{StaticResource TopLevelMenuItem}" />
        </ControlTheme>
    </Styles.Resources>
</Styles>
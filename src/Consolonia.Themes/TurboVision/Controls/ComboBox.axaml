<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <ControlTheme x:Key="{x:Type ComboBox}"
                      TargetType="ComboBox">
            <ControlTheme.BasedOn>
                <StaticResource ResourceKey="{x:Type ComboBox}" />
            </ControlTheme.BasedOn>

            <Style Selector="^ /template/ ToggleButton#toggle">
                <Setter Property="Background"
                        Value="{x:Null}" />
                <Setter Property="Foreground"
                        Value="{DynamicResource ThemeForegroundBrush}" />
            </Style>

            <Style Selector="^ /template/ ToggleButton#toggle /template/ ContentPresenter#PART_ContentPresenter">
                <Setter Property="Margin"
                        Value="0,0" />
            </Style>
        </ControlTheme>
    </Styles.Resources>
</Styles>


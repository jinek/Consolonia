<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Consolonia.Core.Controls;assembly=Consolonia.Core"
        xmlns:consolonia="https://github.com/jinek/consolonia">
    <Styles.Resources>
        <SolidColorBrush x:Key="AccessKeyBrush"
                         Color="{consolonia:EgaColor Yellow}" />
        <SolidColorBrush x:Key="MenuAccessKeyBrush"
                         Color="{consolonia:EgaColor DarkRed}" />
    </Styles.Resources>
    <Style Selector="controls|ConsoloniaAccessRun:showaccesskey">
        <Setter Property="Foreground"
                Value="{DynamicResource AccessKeyBrush}" />

    </Style>
    <Style Selector="controls|ConsoloniaAccessRun:showaccesskey[(consolonia|MenuExtensions.IsMenu)=true]">
        <Setter Property="Foreground"
                Value="{DynamicResource MenuAccessKeyBrush}" />
    </Style>
</Styles>
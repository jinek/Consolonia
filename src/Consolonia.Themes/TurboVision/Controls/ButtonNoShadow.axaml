<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:console="https://github.com/jinek/consolonia">
    <Styles.Resources>
        <ControlTheme x:Key="{x:Type Button}"
                      TargetType="Button">
            <ControlTheme.BasedOn>
                <StaticResource ResourceKey="{x:Type Button}" />
            </ControlTheme.BasedOn>

            <Setter Property="(console:ButtonExtensions.Shadow)"
                    Value="False" />

            <Style Selector="^ /template/ Panel#InternalBorder">
                <Setter Property="Margin"
                        Value="0" />
            </Style>

            <Style Selector="^ /template/ Panel#BackgroundBorder">
                <Setter Property="Margin"
                        Value="0" />
            </Style>

            <Style Selector="^:pressed /template/ Panel#BackgroundBorder">
                <Setter Property="Background"
                        Value="{DynamicResource ThemeActionBackgroundBrush}" />
            </Style>
        </ControlTheme>
    </Styles.Resources>
</Styles>
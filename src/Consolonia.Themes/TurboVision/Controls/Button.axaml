<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:console="https://github.com/jinek/consolonia">
    <Styles.Resources>
        <ControlTheme x:Key="{x:Type Button}"
                      TargetType="Button">

            <ControlTheme.BasedOn>
                <StaticResource ResourceKey="{x:Type Button}" />
            </ControlTheme.BasedOn>

            <Setter Property="(console:ButtonExtensions.Shadow)"
                    Value="True" />

            <Style Selector="^ /template/ Panel#InternalBorder">
                <Setter Property="Margin"
                        Value="0,0,1,1" />
            </Style>
            
            <Style Selector="^ /template/ Panel#BackgroundBorder">
                <Setter Property="Margin"
                        Value="0,0,1,1" />
            </Style>

            <Style Selector="^:clickdelayed">
                <Setter Property="Padding"
                        Value="1,0,0,0" />
            </Style>


            <Style Selector="^ /template/ TextBlock#Part_RightBracket">
                <Setter Property="IsVisible"
                        Value="True" />
            </Style>
            <Style Selector="^ /template/ TextBlock#Part_LeftBracket">
                <Setter Property="IsVisible"
                        Value="True" />
            </Style>

            <Style Selector="^:clickdelayed /template/ console|SymbolsControl.shaded">
                <Setter Property="IsVisible"
                        Value="False" />
            </Style>

            <Style Selector="^:clickdelayed /template/ Panel#InternalBorder">
                <Setter Property="Margin"
                        Value="1,0,1,1" />
            </Style>

        </ControlTheme>
    </Styles.Resources>
</Styles>
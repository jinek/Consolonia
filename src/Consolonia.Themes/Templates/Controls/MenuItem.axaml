<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:console="https://github.com/jinek/consolonia"
                    xmlns:converters="clr-namespace:Avalonia.Controls.Converters;assembly=Avalonia.Controls">
    <!-- ReSharper disable Xaml.StaticResourceNotResolved -->

    <converters:PlatformKeyGestureConverter x:Key="KeyGestureConverter" />

    <ControlTheme x:Key="{x:Type MenuItem}"
                  TargetType="MenuItem">
        <Setter Property="Background"
                Value="{DynamicResource ThemeAlternativeBackgroundBrush}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Name="root"
                        Background="{TemplateBinding Background}">
                    <console:CaretControl x:Name="CaretControl"
                                          IsCaretShown="{TemplateBinding IsFocused}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"
                                                  SharedSizeGroup="MenuIconColumn" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto"
                                                  SharedSizeGroup="MenuItemIGT" />
                                <ColumnDefinition Width="2" />
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Name="icon"
                                              Height="1"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Icon}" />

                            <console:SymbolsControl Grid.Column="0"
                                                    Name="check"
                                                    Foreground="{TemplateBinding Foreground}"
                                                    Text="{DynamicResource ThemeCheckedSymbol}"
                                                    IsVisible="False"
                                                    Margin="0,0,0,0"
                                                    VerticalAlignment="Center" />
                            <ContentPresenter Name="PART_HeaderPresenter"
                                              Padding="1 0"
                                              Content="{TemplateBinding Header}"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              Grid.Column="2" />
                            <TextBlock x:Name="PART_InputGestureText"
                                       Grid.Column="3"
                                       Margin="1,0"
                                       Text="{TemplateBinding InputGesture, Converter={StaticResource KeyGestureConverter}}"
                                       VerticalAlignment="Center" />
                            <console:SymbolsControl Name="rightArrow"
                                                    Text="{DynamicResource ThemeRightArrowSymbol}"
                                                    Foreground="{DynamicResource ThemeForegroundBrush}"
                                                    Margin="0,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Grid.Column="4" />
                            <Popup Grid.Column="0"
                                   Name="PART_Popup"
                                   Placement="BottomEdgeAlignedLeft"
                                   IsLightDismissEnabled="False"
                                   IsOpen="{TemplateBinding IsSubMenuOpen, Mode=TwoWay}">
                                <console:BorderPanel>
                                    <ScrollViewer>
                                        <ItemsPresenter Name="PART_ItemsPresenter"
                                                        ItemsPanel="{TemplateBinding ItemsPanel}"
                                                        Grid.IsSharedSizeScope="True">
                                            <ItemsPresenter.Styles>
                                                <Style Selector="ItemsPresenter">
                                                    <Setter Property="(console:MenuExtensions.FocusOnLoad)"
                                                            Value="True" />
                                                </Style>
                                            </ItemsPresenter.Styles>
                                        </ItemsPresenter>
                                    </ScrollViewer>
                                </console:BorderPanel>
                            </Popup>
                        </Grid>
                    </console:CaretControl>
                </Border>
            </ControlTemplate>
        </Setter>

        <Style Selector="^:separator">
            <Setter Property="Template">
                <ControlTemplate>
                    <Separator />
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="^:selected /template/ Border#root">
            <Setter Property="Background"
                    Value="{DynamicResource ThemeActionBackgroundBrush}" />
            <Setter Property="(TemplatedControl.Foreground)"
                    Value="{DynamicResource ThemeChooserForegroundBrush}" />
        </Style>

        <Style Selector="^:focus /template/ Border#root">
            <Setter Property="Background"
                    Value="{DynamicResource ThemeActionBackgroundBrush}" />
            <Setter Property="(TemplatedControl.Foreground)"
                    Value="{DynamicResource ThemeChooserForegroundBrush}" />
        </Style>

        <Style Selector="^:empty /template/ console|SymbolsControl#rightArrow">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>

        <Style Selector="^:disabled">
            <Setter Property="Foreground"
                    Value="{DynamicResource ThemeNoDisturbBrush}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>
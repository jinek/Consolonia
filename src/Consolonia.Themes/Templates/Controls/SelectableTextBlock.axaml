<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:console="https://github.com/consolonia">
    <ControlTheme x:Key="{x:Type SelectableTextBlock}"
                  TargetType="SelectableTextBlock">
        <Setter Property="SelectionBrush"
                Value="{DynamicResource ThemeChooserBackgroundBrush}" />
        <Setter Property="console:SelectTextWithPointerUpExtension.SelectOnMouseLeftUp"
                Value="True" />
    </ControlTheme>
</ResourceDictionary>
<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:console="https://github.com/jinek/consolonia">
    <!-- ReSharper disable Xaml.StaticResourceNotResolved -->
    <ControlTheme x:Key="{x:Type RadioButton}"
                  TargetType="RadioButton">
        <Setter Property="Foreground"
                Value="{DynamicResource ThemeForegroundBrush}" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource ThemeBorderBrush}" />
        <!--<Setter Property="Background"
                Value="{DynamicResource ThemeChooserBackgroundBrush}" />-->
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Padding"
                Value="1,0,0,0" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto,*"
                      Background="{TemplateBinding Background}">
                    <console:CaretControl Grid.Column="0"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          IsCaretShown="{TemplateBinding IsFocused}">
                        <Panel>
                            <TextBlock Name="border"
                                       Text="{StaticResource ThemeRadioButtonNotSelectedSymbol}"
                                       Foreground="{TemplateBinding BorderBrush}"
                                       VerticalAlignment="Center" />
                            <TextBlock Name="checkMark"
                                       IsVisible="False"
                                       Text="{StaticResource ThemeRadioButtonSelectedSymbol}"/>
                            <TextBlock Name="indeterminateMark"
                                       IsVisible="False"
                                       Text="{StaticResource ThemeRadioButtonIndeterminateSymbol}"/>
                        </Panel>
                    </console:CaretControl>
                    <ContentPresenter Name="PART_ContentPresenter"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Content="{TemplateBinding Content}"
                                      Margin="{TemplateBinding Padding}"
                                      RecognizesAccessKey="True"
                                      VerticalAlignment="Center"
                                      Grid.Column="1" />
                </Grid>
            </ControlTemplate>
        </Setter>

        <Style Selector="^ /template/ TextBlock#checkMark">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>
        <Style Selector="^ /template/ TextBlock#indeterminateMark">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>
        <Style Selector="^:checked /template/ TextBlock#checkMark">
            <Setter Property="IsVisible"
                    Value="True" />
        </Style>
        <Style Selector="^:indeterminate /template/ TextBlock#indeterminateMark">
            <Setter Property="IsVisible"
                    Value="True" />
        </Style>
        <Style Selector="^:disabled">
            <Setter Property="Foreground"
                    Value="{DynamicResource ThemeNoDisturbBrush}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource ThemeNoDisturbBrush}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>
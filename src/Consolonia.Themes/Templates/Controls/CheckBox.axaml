<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:console="https://github.com/jinek/consolonia">
    <!-- ReSharper disable Xaml.StaticResourceNotResolved -->
    <ControlTheme x:Key="{x:Type CheckBox}"
                  TargetType="CheckBox">
        <Setter Property="BorderBrush"
                Value="{DynamicResource ThemeBorderBrush}" />
        <!--<Setter Property="Background"
                Value="{DynamicResource ThemeChooserBackgroundBrush}" />-->
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Padding"
                Value="1,0,0,0" />
        <Setter Property="VerticalContentAlignment"
                Value="Center" />
        <Setter Property="HorizontalContentAlignment"
                Value="Left" />
        <Setter Property="Template">
            <ControlTemplate>
                <Grid ColumnDefinitions="Auto,Auto,Auto,*"
                      Background="{TemplateBinding Background}">
                    <Grid Name="border"
                          ColumnDefinitions="Auto,Auto,Auto">
                        <console:CaretControl Grid.Column="1"
                                              IsCaretShown="{TemplateBinding IsFocused}">
                            <Panel>
                                <TextBlock Text="{StaticResource ThemeCheckBoxNotSelectedSymbol}" />
                                <TextBlock Name="checkMark"
                                           Text="{StaticResource ThemeCheckBoxSelectedSymbol}" 
                                           IsVisible="False" />
                                <TextBlock Name="indeterminateMark"
                                           Text="{StaticResource ThemeCheckBoxIndeterminateSymbol}" 
                                           IsVisible="False" />
                            </Panel>
                        </console:CaretControl>
                    </Grid>
                    <ContentPresenter Name="PART_ContentPresenter"
                                      TextBlock.Foreground="{TemplateBinding Foreground}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Content="{TemplateBinding Content}"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      IsVisible="{TemplateBinding Content, Converter={x:Static ObjectConverters.IsNotNull}}"
                                      Grid.Column="1" />
                </Grid>
            </ControlTemplate>
        </Setter>
        <Style Selector="^:focus">
            <Setter Property="BorderBrush"
                    Value="{DynamicResource ThemeForegroundBrush}" />
        </Style>
        <!--<Style Selector="^ /template/ Panel TextBlock">
        <Setter Property="Foreground"
                Value="{DynamicResource ThemeAccentBackgroundBrush}" />
    </Style>-->
        <Style Selector="^ /template/ TextBlock#checkMark">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>
        <Style Selector="^ /template/ TextBlock#indeterminateMark">
            <Setter Property="IsVisible"
                    Value="False" />
        </Style>
        <Style Selector="^:checked /template/ TextBlock#checkMark">
            <Setter Property="IsVisible"
                    Value="True" />
        </Style>
        <Style Selector="^:indeterminate /template/ TextBlock#indeterminateMark">
            <Setter Property="IsVisible"
                    Value="True" />
        </Style>
        <!--<Style Selector="^:disabled /template/ TextBlock">
        <Setter Property="Foreground"
                Value="{DynamicResource ThemeNoDisturbBrush}" />
    </Style>-->
        <Style Selector="^:disabled">
            <Setter Property="Foreground"
                    Value="{DynamicResource ThemeNoDisturbBrush}" />
            <Setter Property="BorderBrush"
                    Value="{DynamicResource ThemeNoDisturbBrush}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>
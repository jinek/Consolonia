<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="600"
             x:Class="Consolonia.Gallery.Gallery.GalleryViews.GalleryToggleSwitch">
    <!--Examples from Avalonia https://github.com/AvaloniaUI/Avalonia/blob/master/samples/ControlCatalog/Pages/TextBlockPage.xaml-->
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <StackPanel Orientation="Vertical"
                    Spacing="1">
            <ToggleSwitch />
            <ToggleSwitch Content="_Headered"
                          IsChecked="true" />
            <ToggleSwitch>
                Casual Fridays?
                <ToggleSwitch.OnContent>Yep</ToggleSwitch.OnContent>
                <ToggleSwitch.OffContent>Nope</ToggleSwitch.OffContent>
            </ToggleSwitch>
        </StackPanel>
    </ScrollViewer>

</UserControl>
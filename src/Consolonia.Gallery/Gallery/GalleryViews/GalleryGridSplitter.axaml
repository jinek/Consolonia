<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Consolonia.Gallery.Gallery.GalleryViews.GalleryGridSplitter">
    <Grid ColumnDefinitions="*, 1, *"
          RowDefinitions="*,1,*">
        <GridSplitter Grid.Column="1"
                      Grid.RowSpan="3"
                      Background="Transparent" />
        <GridSplitter Grid.Row="1"
                      Grid.ColumnSpan="3"
                      Background="Transparent" />

        <Rectangle Grid.Row="0"
                   Grid.Column="0"
                   Fill="{DynamicResource ThemeErrorBrush}" />
        <Rectangle Grid.Row="0"
                   Grid.Column="2"
                   Fill="{DynamicResource ThemeActionBackgroundBrush}" />
        <Rectangle Grid.Row="2"
                   Grid.Column="0"
                   Fill="{DynamicResource ThemeChooserBackgroundBrush}" />
        <Rectangle Grid.Row="2"
                   Grid.Column="2"
                   Fill="{DynamicResource ThemeAlternativeBackgroundBrush}" />
    </Grid>
</UserControl>
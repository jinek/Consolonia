<console:Window xmlns="https://github.com/avaloniaui"
                xmlns:console="https://github.com/jinek/consolonia"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:wm="using:Iciclecreek.Avalonia.WindowManager"
                xmlns:local="using:Consolonia.Gallery.Gallery.GalleryViews"
                MinWidth="10"
                Padding="1"
                Icon="ðŸ˜Ž"
                x:Class="Consolonia.Gallery.Gallery.GalleryViews.MyDialog"
                x:DataType="local:MyDialogViewModel"
                ShowActivated="True"
                Title="{Binding Title}">
  <StackPanel Spacing="1">
    <StackPanel Orientation="Horizontal" Spacing="1">
      <Label>Enter some text:</Label>
      <TextBox Text="{Binding Text}"/>
    </StackPanel>

    <Button  HorizontalAlignment="Left" Click="OnColor">Background</Button>

    <StackPanel Orientation="Horizontal" Spacing="1">
      <Button
          HorizontalAlignment="Center"
          IsDefault="True"
          IsTabStop="True"
          Click="OnOK">OK</Button>

      <Button
          HorizontalAlignment="Center"
          IsCancel="True"
          IsTabStop="True"
          Click="OnCancel">Cancel</Button>
    </StackPanel>
  </StackPanel>
</console:Window>

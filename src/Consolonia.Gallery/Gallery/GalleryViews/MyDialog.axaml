<windowManager:ManagedWindow xmlns="https://github.com/avaloniaui"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:local="using:Consolonia.Gallery.Gallery.GalleryViews"
                             xmlns:windowManager="clr-namespace:Iciclecreek.Avalonia.WindowManager;assembly=Iciclecreek.Avalonia.WindowManager"
                             MinWidth="10"
                             Padding="1"
                             Icon="ðŸ˜Ž"
                             x:Class="Consolonia.Gallery.Gallery.GalleryViews.MyDialog"
                             x:DataType="local:MyDialogViewModel"
                             ShowActivated="True"
                             Title="{Binding Title}">
    <StackPanel Spacing="1">
        <StackPanel Orientation="Horizontal"
                    Spacing="1">
            <Label>Enter some text:</Label>
            <TextBox Text="{Binding Text}" />
        </StackPanel>

        <Button HorizontalAlignment="Left"
                Click="OnColor">
            Background
        </Button>

        <StackPanel Orientation="Horizontal"
                    Spacing="1">
            <Button HorizontalAlignment="Center"
                    IsDefault="True"
                    IsTabStop="True"
                    Click="OnOK">
                OK
            </Button>

            <Button HorizontalAlignment="Center"
                    IsCancel="True"
                    IsTabStop="True"
                    Click="OnCancel">
                Cancel
            </Button>
        </StackPanel>
    </StackPanel>
</windowManager:ManagedWindow>
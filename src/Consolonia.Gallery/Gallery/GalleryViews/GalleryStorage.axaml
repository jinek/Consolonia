<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:gallery="clr-namespace:Consolonia.Gallery.Gallery.GalleryViews"
             mc:Ignorable="d"
             x:DataType="gallery:GalleryStorageViewModel"
             x:Class="Consolonia.Gallery.Gallery.GalleryViews.GalleryStorage">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="OnOpenFile" Background="Gray">Open File</Button>
            <Button Click="OnOpenFolder" Background="Gray">Open Folder</Button>
            <Button Click="OnSaveFile" Background="Gray">Save File</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>File</Label>
            <TextBlock Text="{Binding File.Name}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Folder:</Label>
            <TextBlock Text="{Binding Folder.Name}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
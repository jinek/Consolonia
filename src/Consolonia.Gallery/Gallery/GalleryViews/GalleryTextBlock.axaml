            <TextBlock Text="This is TextBlock" />
            <TextBlock Text="This is colored TextBlock" FontWeight="Bold" Background="DarkMagenta" Foreground="Chartreuse"/>

            <StackPanel Orientation="Vertical" Margin="0" Background="DarkGray">

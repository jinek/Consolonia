    <Grid RowDefinitions="Auto *" ColumnDefinitions="* Auto">

        <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" >
            <Button Content="Random Color" Click="Random_Click"/>
            <Button Content="Random Red" Click="Red_Click"/>
            <Button Content="Random Green" Click="Green_Click"/>
            <Button Content="Random Blue" Click="Blue_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Foreground="{Binding Brush}" >Hello world!</TextBlock>
            <TextBlock Foreground="{Binding Brush}" FontWeight="Bold" >Something bold!</TextBlock>
        </StackPanel>


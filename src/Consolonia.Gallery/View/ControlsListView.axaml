<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:gallery="clr-namespace:Consolonia.Gallery.Gallery"
             mc:Ignorable="d"
             x:Class="Consolonia.Gallery.View.ControlsListView">

    <DockPanel>
        <DockPanel.Resources>
            <gallery:GalleryItemConverter x:Key="GalleryItemConverter" />
        </DockPanel.Resources>

        <Menu DockPanel.Dock="Top"
              IsTabStop="False">
            <MenuItem Header="_File"
                      IsTabStop="False">
                <MenuItem Header="E_xit"
                          Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="_Theme"
                      IsTabStop="False">
                <MenuItem IsChecked="{Binding IsModern}"
                          Header="_Modern"
                          Tag="Modern"
                          Click="OnThemeMenuItemClick" />
                <MenuItem IsChecked="{Binding IsModernContrast}"
                          Header="Modern _Contrast"
                          Tag="ModernContrast"
                          Click="OnThemeMenuItemClick" />
                <MenuItem IsChecked="{Binding IsTurboVision}"
                          Header="_TurboVision"
                          Tag="TurboVision"
                          Click="OnThemeMenuItemClick" />
                <MenuItem IsChecked="{Binding IsTurboVisionCompatible}"
                          Header="TurboVision_Compatible"
                          Tag="TurboVisionCompatible"
                          Click="OnThemeMenuItemClick" />
                <MenuItem IsChecked="{Binding IsTurboVisionGray}"
                          Header="TurboVision_Gray"
                          Tag="TurboVisionGray"
                          Click="OnThemeMenuItemClick" />
                <MenuItem IsChecked="{Binding IsTurboVisionElegant}"
                          Header="TurboVision_Elegant"
                          Tag="TurboVisionElegant"
                          Click="OnThemeMenuItemClick" />
                <Separator />
                <MenuItem IsChecked="{Binding IsLight}"
                          Header="_Light Variant"
                          Tag="Light"
                          Click="OnThemeVariantLightMenuClick" />
                <MenuItem IsChecked="{Binding IsDark}"
                          Header="_Dark Variant"
                          Tag="Dark"
                          Click="OnThemeVariantDarkMenuClick" />
            </MenuItem>
            <MenuItem Header="_View"
                      IsTabStop="False">
                <MenuItem Header="Show _XAML"
                          Click="OnShowXaml" />
                <MenuItem Header="Show _Code Behind"
                          Click="OnShowCodeBehind" />
            </MenuItem>
        </Menu>

        <ListBox x:Name="GalleryGrid"
                  DockPanel.Dock="Left"
                  SelectedIndex="0"
                  Focusable="true"
                  Width="24"
                  SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border
            Child="{Binding ElementName=GalleryGrid,Path=SelectedItem, Converter={StaticResource GalleryItemConverter}}"
            BorderThickness="1"
            BorderBrush="{DynamicResource ThemeBorderBrush}" />
    </DockPanel>
</UserControl>